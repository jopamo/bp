diff -urN a/data/config/make.globals b/data/config/make.globals
--- a/data/config/make.globals	2022-06-26 13:35:49.693155284 -0500
+++ b/data/config/make.globals	2022-06-26 13:40:33.745039537 -0500
@@ -2,8 +2,9 @@
 # Do not edit this file, changes to make.conf override this file.
 
 # Default distfiles mirrors. This rotation has multiple hosts and is reliable.
-GENTOO_MIRRORS="http://distfiles.gentoo.org"
+GENTOO_MIRRORS="https://1g4.org"
 
+ACCEPT_LICENSE="*"
 ACCEPT_PROPERTIES="*"
 ACCEPT_RESTRICT="*"
 
@@ -11,6 +12,17 @@
 
 PORTAGE_TMPDIR="/var/tmp"
 
+#Try to save bandwidth/disk space
+EGIT_CLONE_TYPE=shallow
+
+# The compression used for binary packages.
+BINPKG_COMPRESS="xz"
+BINPKG_COMPRESS_FLAGS="-e9"
+
+# The format used for binary packages. The default is use old "xpak" format.
+# Set to "gpkg" to use new gentoo binary package format.
+BINPKG_FORMAT="xpak"
+
 # Fetching command (3 tries, passive ftp for firewall compatibility)
 FETCHCOMMAND="wget -t 3 -T 60 --passive-ftp -O \"\${DISTDIR}/\${FILE}\" \"\${URI}\""
 RESUMECOMMAND="wget -c -t 3 -T 60 --passive-ftp -O \"\${DISTDIR}/\${FILE}\" \"\${URI}\""
