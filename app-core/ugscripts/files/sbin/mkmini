#!/bin/bash

emerge --noreplace --oneshot pciutils e2fsprogs btrfs-progs shadowsocks-libev p7zip crunch knock p7zip chrony jitterentropy mailutils nftables pure-ftpd openssh screen lynx iputils nano shadowsocks-libev lighttpd iproute2 iputils nmap lz4 zstd mbedtls sshfs

cd ~
rm -rf /root/miniroot-$(date +%Y%m%d)
mkdir -p /root/miniroot-$(date +%Y%m%d)/usr/{bin,sbin,lib}

cd /root/miniroot-$(date +%Y%m%d)
rm -rf lib usr/lib
ln -s usr/bin bin
ln -s usr/sbin sbin
ln -s usr/lib lib64
ln -s usr/lib lib
cd /root/miniroot-$(date +%Y%m%d)/usr
ln -s lib lib64

cd /root/miniroot-$(date +%Y%m%d)

mkdir -p /root/miniroot-$(date +%Y%m%d)/{proc,sys,dev,root,home,tmp,run}

#system
cp /var/cache/packages/app-compression/bzip2* .
tar xvhf bzip2* --xattrs
rm bzip2* || exit

