# NVIDIA drivers support
alias char-major-195 nvidia
alias /dev/nvidiactl char-major-195

# tweak driver node ownership and permissions
# SECURITY WARNING
# only add trusted users to video and render groups
# they may be able to crash or compromise the machine

options nvidia \
    NVreg_DeviceFileUID=0 \
    NVreg_DeviceFileGID=@VIDEOGID@ \
    NVreg_DeviceFileMode=0660 \
    NVreg_ModifyDeviceFiles=1

# enable DRM KMS and fbdev handoff
options nvidia-drm modeset=1 fbdev=1

# disable nouveau to avoid driver races
blacklist nouveau
options nouveau modeset=0
